{
  "manifest_version": 3,
  "name": "AdMe",
  "version": "1.0",
  "description": "Replaces ads with positive content widgets",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "<all_urls>",
    "https://api.imgflip.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["config.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ]
}